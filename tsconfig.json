{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "esnext",
    "checkJs": false,
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "isolatedModules": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "@editor/*": ["src/*"]
    }
  },
  "include": ["./src/**/*"]
}
